{
  "compilerOptions": {
    "target": "ES2020",                     // Modern JS output
    "module": "commonjs",                   // Required for Node.js
    "rootDir": "./src",                     // Source code location
    "outDir": "./dist",                     // Where compiled files go
    "strict": true,                         // Enable strict typing
    "moduleResolution": "node",            // Allows imports from node_modules
    "esModuleInterop": true,               // Allows default imports from CommonJS modules
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],                      // Include only src/
  "exclude": ["node_modules", "dist"]      // Exclude build output & dependencies
}